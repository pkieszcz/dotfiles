[user]
    name = Piotr Kieszczy≈Ñski
    email = piotr.kieszczynski@nordcloud.com
[branch]
    autosetuprebase = always
[branch "master"]
    rebase = true
[alias]
    git = !exec git
    a = add
    b = branch
    c = commit
    branches = branch -a
    stashes = stash list
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    prune = fetch --prune
    s = status -sb
    undo = reset --soft HEAD^
    stash-all = stash save --include-untracked
    aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
    tags = tag -l
    update = remote update --prune
[pull]
    rebase = true
[merge]
    ff = only
    conflictstyle = diff3
[push]
    default = simple
    followTags = true
[status]
    showUntrackedFiles = all
[diff]
    tool = icdiff
[difftool]
    prompt = false
[difftool "icdiff"]
    cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red
[credential]
    #helper = !aws --profile CodeCommitProfile codecommit credential-helper $@
#	UseHttpPath = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
